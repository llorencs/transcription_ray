FROM nvidia/cuda:12.8.1-cudnn-devel-ubuntu24.04

WORKDIR /app

# Install Python 3.12 and system dependencies
RUN apt-get update && apt-get install -y \
    python3.12 \
    python3.12-dev \
    python3.12-venv \
    python3-pip \
    ffmpeg \
    libsndfile1 \
    build-essential \
    pkg-config \
    git \
    wget \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.12 as default and create virtual environment
RUN ln -sf /usr/bin/python3.12 /usr/bin/python3 && \
    ln -sf /usr/bin/python3.12 /usr/bin/python && \
    python3 -m venv /opt/venv && \
    /opt/venv/bin/pip install --no-cache-dir --upgrade pip setuptools wheel

# Activate virtual environment
ENV PATH="/opt/venv/bin:$PATH"

# Copy requirements - include ML dependencies for direct transcription
COPY requirements.api.txt requirements.ray.txt ./
RUN pip install --no-cache-dir -r requirements.api.txt && \
    pip install --no-cache-dir -r requirements.ray.txt

# Copy application code
COPY ./src /app/src

# Create directories
RUN mkdir -p /app/temp /app/models

# Set environment variables
ENV PYTHONPATH=/app:/app/src
ENV PYTHONUNBUFFERED=1
ENV CUDA_HOME=/usr/local/cuda
ENV PATH="/opt/venv/bin:/usr/local/cuda/bin:$PATH"

# Expose port
EXPOSE 8080

# Run the application
CMD ["uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8080"]